local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- ‡∏£‡∏∞‡∏ö‡∏ö‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ó‡∏µ‡πà‡∏£‡∏≠‡∏á‡∏£‡∏±‡∏ö‡∏Å‡∏≤‡∏£‡∏£‡∏µ‡πÄ‡∏Å‡∏°
local SaveFileName = "ModernHubAutoSave_V2.json"
local SaveData = {
    AutoBuyWater = false,
    AutoBuySeeds = false,
    BuyDelay = 1,
    SelectedSeeds = {}
}

-- ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ß‡πà‡∏≤‡∏°‡∏µ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡πÑ‡∏ü‡∏•‡πå‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà
local canSave = pcall(function() return readfile and writefile end)

-- ‡πÇ‡∏´‡∏•‡∏î‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ó‡∏µ‡πà‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡πÑ‡∏ß‡πâ
local function LoadSettings()
    if not canSave then
        warn("‚ö†Ô∏è ‡∏£‡∏∞‡∏ö‡∏ö‡πÑ‡∏°‡πà‡∏£‡∏≠‡∏á‡∏£‡∏±‡∏ö‡∏Å‡∏≤‡∏£‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡πÑ‡∏ü‡∏•‡πå")
        return false
    end
    
    local success, data = pcall(function()
        if isfile(SaveFileName) then
            local content = readfile(SaveFileName)
            return game:GetService("HttpService"):JSONDecode(content)
        end
        return nil
    end)
    
    if success and data then
        SaveData = data
        print("‚úÖ ‡πÇ‡∏´‡∏•‡∏î‡∏Å‡∏≤‡∏£‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à!")
        print("üíß ‡∏ô‡πâ‡∏≥‡πÇ‡∏Ñ‡πâ‡∏Å: " .. (SaveData.AutoBuyWater and "‡πÄ‡∏õ‡∏¥‡∏î ‚úì" or "‡∏õ‡∏¥‡∏î ‚úó"))
        print("üå± ‡∏ï‡πâ‡∏ô‡πÑ‡∏°‡πâ: " .. (SaveData.AutoBuySeeds and "‡πÄ‡∏õ‡∏¥‡∏î ‚úì" or "‡∏õ‡∏¥‡∏î ‚úó"))
        return true
    else
        print("‚ÑπÔ∏è ‡πÑ‡∏°‡πà‡∏û‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ó‡∏µ‡πà‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡πÑ‡∏ß‡πâ - ‡πÉ‡∏ä‡πâ‡∏Ñ‡πà‡∏≤‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô")
        return false
    end
end

-- ‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•
local function SaveSettings()
    if not canSave then return end
    
    local success = pcall(function()
        local json = game:GetService("HttpService"):JSONEncode(SaveData)
        writefile(SaveFileName, json)
    end)
    
    if success then
        print("üíæ ‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏Å‡∏≤‡∏£‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à!")
    else
        warn("‚ö†Ô∏è ‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡πÑ‡∏î‡πâ")
    end
end

-- ‡πÇ‡∏´‡∏•‡∏î‡∏Å‡∏≤‡∏£‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤‡∏Å‡πà‡∏≠‡∏ô‡∏™‡∏£‡πâ‡∏≤‡∏á UI
local settingsLoaded = LoadSettings()

-- Create main window
local Window = Rayfield:CreateWindow({
   Name = "üåü Modern Hub V2 - Auto Buy",
   LoadingTitle = "Modern Hub Loading...",
   LoadingSubtitle = "by Modern Team",
   ConfigurationSaving = {
      Enabled = false  -- ‡∏õ‡∏¥‡∏î‡∏£‡∏∞‡∏ö‡∏ö‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏Ç‡∏≠‡∏á Rayfield ‡πÄ‡∏û‡∏£‡∏≤‡∏∞‡πÄ‡∏£‡∏≤‡πÉ‡∏ä‡πâ‡∏Ç‡∏≠‡∏á‡πÄ‡∏£‡∏≤‡πÄ‡∏≠‡∏á
   }
})

-- Create tabs
local AutoBuyTab = Window:CreateTab("üõí Auto Buy", 6034287594)
local SettingsTab = Window:CreateTab("‚öôÔ∏è Settings", 6034996695)

-- Create sections
local WaterSection = AutoBuyTab:CreateSection("üíß ‡∏ô‡πâ‡∏≥‡πÇ‡∏Ñ‡πâ‡∏Å")
local SeedSection = AutoBuyTab:CreateSection("üå± ‡∏ï‡πâ‡∏ô‡πÑ‡∏°‡πâ")
local StatusSection = SettingsTab:CreateSection("üìä ‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞")

-- Variables (‡πÉ‡∏ä‡πâ‡∏Ñ‡πà‡∏≤‡∏ó‡∏µ‡πà‡πÇ‡∏´‡∏•‡∏î‡∏°‡∏≤)
local AutoBuyWaterEnabled = SaveData.AutoBuyWater
local AutoBuySeedsEnabled = SaveData.AutoBuySeeds
local BuyDelay = SaveData.BuyDelay

-- ‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡∏ï‡πâ‡∏ô‡πÑ‡∏°‡πâ‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î
local SeedList = {
    "Watermelon Seed",
    "Grape Seed",
    "Cocotank Seed",
    "Carnivorous Plant Seed",
    "Mr Carrot Seed",
    "Tomatrio Seed",
    "Shroombino Seed",
    "Mango Seed",
    "King Limone Seed",
    "Starfruit Seed"
}

-- ‡πÄ‡∏Å‡πá‡∏ö‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞‡∏Å‡∏≤‡∏£‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏ï‡πâ‡∏ô‡πÑ‡∏°‡πâ (‡πÇ‡∏´‡∏•‡∏î‡∏à‡∏≤‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ó‡∏µ‡πà‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å)
local SelectedSeeds = {}
for _, seed in pairs(SeedList) do
    SelectedSeeds[seed] = SaveData.SelectedSeeds[seed] or false
end

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏ã‡∏∑‡πâ‡∏≠‡∏ô‡πâ‡∏≥‡πÇ‡∏Ñ‡πâ‡∏Å
local function BuyWater()
    if not AutoBuyWaterEnabled then return end
    
    local success, error = pcall(function()
        local args = {
            "Water Bucket",
            true
        }
        game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("BuyGear"):FireServer(unpack(args))
    end)
    
    if not success then
        warn("‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡∏ã‡∏∑‡πâ‡∏≠‡∏ô‡πâ‡∏≥: " .. tostring(error))
    end
end

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏ã‡∏∑‡πâ‡∏≠‡∏ï‡πâ‡∏ô‡πÑ‡∏°‡πâ
local function BuySeeds()
    if not AutoBuySeedsEnabled then return end
    
    for seedName, isSelected in pairs(SelectedSeeds) do
        if isSelected then
            local success, error = pcall(function()
                local args = {
                    seedName,
                    true
                }
                game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("BuyItem"):FireServer(unpack(args))
            end)
            
            if not success then
                warn("‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡∏ã‡∏∑‡πâ‡∏≠ " .. seedName .. ": " .. tostring(error))
            end
            
            wait(0.1)
        end
    end
end

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á Toggle ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏ô‡πâ‡∏≥‡πÇ‡∏Ñ‡πâ‡∏Å
local WaterToggle = AutoBuyTab:CreateToggle({
   Name = "üîÑ Auto Buy ‡∏ô‡πâ‡∏≥‡πÇ‡∏Ñ‡πâ‡∏Å",
   CurrentValue = AutoBuyWaterEnabled,
   Flag = "AutoBuyWater",
   Callback = function(Value)
      AutoBuyWaterEnabled = Value
      SaveData.AutoBuyWater = Value
      SaveSettings()
      
      if Value then
          Rayfield:Notify({
             Title = "‡πÄ‡∏õ‡∏¥‡∏î‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô ‚úì",
             Content = "‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ã‡∏∑‡πâ‡∏≠‡∏ô‡πâ‡∏≥‡πÇ‡∏Ñ‡πâ‡∏Å‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥ (‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡πÅ‡∏•‡πâ‡∏ß)",
             Duration = 3,
             Image = 4483362458
          })
      else
          Rayfield:Notify({
             Title = "‡∏õ‡∏¥‡∏î‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô ‚úó",
             Content = "‡∏´‡∏¢‡∏∏‡∏î‡∏ã‡∏∑‡πâ‡∏≠‡∏ô‡πâ‡∏≥‡πÇ‡∏Ñ‡πâ‡∏Å‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥ (‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡πÅ‡∏•‡πâ‡∏ß)",
             Duration = 3,
             Image = 4483362458
          })
      end
   end,
})

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á Toggle ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏ï‡πâ‡∏ô‡πÑ‡∏°‡πâ‡πÅ‡∏ï‡πà‡∏•‡∏∞‡∏ä‡∏ô‡∏¥‡∏î
for _, seedName in ipairs(SeedList) do
    AutoBuyTab:CreateToggle({
       Name = "üå± " .. seedName,
       CurrentValue = SelectedSeeds[seedName],
       Flag = "Seed_" .. seedName,
       Callback = function(Value)
          SelectedSeeds[seedName] = Value
          SaveData.SelectedSeeds[seedName] = Value
          SaveSettings()
       end,
    })
end

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á Toggle ‡πÄ‡∏õ‡∏¥‡∏î/‡∏õ‡∏¥‡∏î Auto Buy ‡∏ï‡πâ‡∏ô‡πÑ‡∏°‡πâ
local SeedToggle = AutoBuyTab:CreateToggle({
   Name = "üîÑ ‡πÄ‡∏£‡∏¥‡πà‡∏° Auto Buy ‡∏ï‡πâ‡∏ô‡πÑ‡∏°‡πâ",
   CurrentValue = AutoBuySeedsEnabled,
   Flag = "AutoBuySeeds",
   Callback = function(Value)
      AutoBuySeedsEnabled = Value
      SaveData.AutoBuySeeds = Value
      SaveSettings()
      
      if Value then
          local selectedCount = 0
          for _, isSelected in pairs(SelectedSeeds) do
              if isSelected then selectedCount = selectedCount + 1 end
          end
          
          Rayfield:Notify({
             Title = "‡πÄ‡∏õ‡∏¥‡∏î‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô ‚úì",
             Content = "‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ã‡∏∑‡πâ‡∏≠‡∏ï‡πâ‡∏ô‡πÑ‡∏°‡πâ " .. selectedCount .. " ‡∏ä‡∏ô‡∏¥‡∏î (‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡πÅ‡∏•‡πâ‡∏ß)",
             Duration = 3,
             Image = 4483362458
          })
      else
          Rayfield:Notify({
             Title = "‡∏õ‡∏¥‡∏î‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô ‚úó",
             Content = "‡∏´‡∏¢‡∏∏‡∏î‡∏ã‡∏∑‡πâ‡∏≠‡∏ï‡πâ‡∏ô‡πÑ‡∏°‡πâ‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥ (‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡πÅ‡∏•‡πâ‡∏ß)",
             Duration = 3,
             Image = 4483362458
          })
      end
   end,
})

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á Slider ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏£‡πá‡∏ß‡∏Å‡∏≤‡∏£‡∏ã‡∏∑‡πâ‡∏≠
local DelaySlider = SettingsTab:CreateSlider({
   Name = "‚è±Ô∏è ‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏£‡πá‡∏ß‡∏Å‡∏≤‡∏£‡∏ã‡∏∑‡πâ‡∏≠ (‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ)",
   Range = {0.5, 10},
   Increment = 0.5,
   Suffix = "‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ",
   CurrentValue = BuyDelay,
   Flag = "BuyDelay",
   Callback = function(Value)
      BuyDelay = Value
      SaveData.BuyDelay = Value
      SaveSettings()
   end,
})

-- ‡∏õ‡∏∏‡πà‡∏°‡∏ã‡∏∑‡πâ‡∏≠‡∏ó‡∏±‡∏ô‡∏ó‡∏µ
local WaterButton = AutoBuyTab:CreateButton({
   Name = "üíß ‡∏ã‡∏∑‡πâ‡∏≠‡∏ô‡πâ‡∏≥‡πÇ‡∏Ñ‡πâ‡∏Å‡∏ó‡∏±‡∏ô‡∏ó‡∏µ",
   Callback = function()
      BuyWater()
      Rayfield:Notify({
         Title = "‡∏ã‡∏∑‡πâ‡∏≠‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à",
         Content = "‡∏ã‡∏∑‡πâ‡∏≠‡∏ô‡πâ‡∏≥‡πÇ‡∏Ñ‡πâ‡∏Å 1 ‡∏Ñ‡∏£‡∏±‡πâ‡∏á",
         Duration = 2,
         Image = 4483362458
      })
   end,
})

local SeedButton = AutoBuyTab:CreateButton({
   Name = "üå± ‡∏ã‡∏∑‡πâ‡∏≠‡∏ï‡πâ‡∏ô‡πÑ‡∏°‡πâ‡∏ó‡∏µ‡πà‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏ó‡∏±‡∏ô‡∏ó‡∏µ",
   Callback = function()
      BuySeeds()
      local selectedCount = 0
      for _, isSelected in pairs(SelectedSeeds) do
          if isSelected then selectedCount = selectedCount + 1 end
      end
      Rayfield:Notify({
         Title = "‡∏ã‡∏∑‡πâ‡∏≠‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à",
         Content = "‡∏ã‡∏∑‡πâ‡∏≠‡∏ï‡πâ‡∏ô‡πÑ‡∏°‡πâ " .. selectedCount .. " ‡∏ä‡∏ô‡∏¥‡∏î",
         Duration = 2,
         Image = 4483362458
      })
   end,
})

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á Label ‡πÅ‡∏™‡∏î‡∏á‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞
local StatusLabel = SettingsTab:CreateLabel("‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞: ‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÇ‡∏´‡∏•‡∏î...")

-- ‡πÅ‡∏™‡∏î‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ó‡∏µ‡πà‡πÇ‡∏´‡∏•‡∏î
if settingsLoaded then
    SettingsTab:CreateLabel("‚úÖ ‡πÇ‡∏´‡∏•‡∏î‡∏Å‡∏≤‡∏£‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤‡∏•‡πà‡∏≤‡∏™‡∏∏‡∏î‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à")
else
    SettingsTab:CreateLabel("‚ÑπÔ∏è ‡πÉ‡∏ä‡πâ‡∏Å‡∏≤‡∏£‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô")
end

local WaterStatusLabel = SettingsTab:CreateLabel("üíß ‡∏ô‡πâ‡∏≥‡πÇ‡∏Ñ‡πâ‡∏Å: " .. (AutoBuyWaterEnabled and "‡πÄ‡∏õ‡∏¥‡∏î ‚úì" or "‡∏õ‡∏¥‡∏î ‚úó"))
local SeedStatusLabel = SettingsTab:CreateLabel("üå± ‡∏ï‡πâ‡∏ô‡πÑ‡∏°‡πâ: " .. (AutoBuySeedsEnabled and "‡πÄ‡∏õ‡∏¥‡∏î ‚úì" or "‡∏õ‡∏¥‡∏î ‚úó"))

local selectedCount = 0
for _, isSelected in pairs(SelectedSeeds) do
    if isSelected then selectedCount = selectedCount + 1 end
end
SettingsTab:CreateLabel("üéØ ‡∏ï‡πâ‡∏ô‡πÑ‡∏°‡πâ‡∏ó‡∏µ‡πà‡πÄ‡∏•‡∏∑‡∏≠‡∏Å: " .. selectedCount .. " ‡∏ä‡∏ô‡∏¥‡∏î")
SettingsTab:CreateLabel("‚è±Ô∏è ‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏£‡πá‡∏ß: " .. BuyDelay .. " ‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ")

-- ‡∏õ‡∏∏‡πà‡∏°‡∏£‡∏µ‡πÄ‡∏ã‡πá‡∏ï‡∏Å‡∏≤‡∏£‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤
local ResetButton = SettingsTab:CreateButton({
   Name = "üîÑ ‡∏£‡∏µ‡πÄ‡∏ã‡πá‡∏ï‡∏Å‡∏≤‡∏£‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î",
   Callback = function()
      if canSave then
          pcall(function()
              if isfile(SaveFileName) then
                  delfile(SaveFileName)
              end
          end)
      end
      
      Rayfield:Notify({
         Title = "‡∏£‡∏µ‡πÄ‡∏ã‡πá‡∏ï‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à",
         Content = "‡∏•‡∏ö‡πÑ‡∏ü‡∏•‡πå‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡πÅ‡∏•‡πâ‡∏ß - ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏£‡∏µ‡πÄ‡∏Å‡∏°‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÉ‡∏ä‡πâ‡∏Ñ‡πà‡∏≤‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô",
         Duration = 5,
         Image = 4483362458
      })
   end,
})

-- Loop ‡∏´‡∏•‡∏±‡∏Å‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏ã‡∏∑‡πâ‡∏≠‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥
spawn(function()
    while wait(BuyDelay) do
        local status = "‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞: "
        
        if AutoBuyWaterEnabled then
            BuyWater()
            status = status .. "üîÑ ‡∏ã‡∏∑‡πâ‡∏≠‡∏ô‡πâ‡∏≥ | "
        end
        
        if AutoBuySeedsEnabled then
            BuySeeds()
            local count = 0
            for _, isSelected in pairs(SelectedSeeds) do
                if isSelected then count = count + 1 end
            end
            status = status .. "üîÑ ‡∏ã‡∏∑‡πâ‡∏≠‡∏ï‡πâ‡∏ô‡πÑ‡∏°‡πâ " .. count .. " ‡∏ä‡∏ô‡∏¥‡∏î"
        end
        
        if not AutoBuyWaterEnabled and not AutoBuySeedsEnabled then
            status = "‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞: ‡∏£‡∏≠‡∏Ñ‡∏≥‡∏™‡∏±‡πà‡∏á..."
        end
        
        StatusLabel:Set(status)
    end
end)

-- ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏Å‡∏≤‡∏£‡∏£‡∏µ‡πÄ‡∏Å‡∏° ‡πÅ‡∏•‡∏∞‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥‡∏Å‡πà‡∏≠‡∏ô‡∏£‡∏µ‡πÄ‡∏Å‡∏°
game.Players.LocalPlayer.CharacterAdded:Connect(function()
    wait(1)
    print("üîÑ ‡∏ï‡∏£‡∏ß‡∏à‡∏û‡∏ö‡∏Å‡∏≤‡∏£‡∏£‡∏µ‡πÄ‡∏Å‡∏° - ‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÇ‡∏´‡∏•‡∏î‡∏Å‡∏≤‡∏£‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤...")
    
    -- ‡πÑ‡∏°‡πà‡∏ï‡πâ‡∏≠‡∏á‡πÇ‡∏´‡∏•‡∏î‡πÉ‡∏´‡∏°‡πà ‡πÄ‡∏û‡∏£‡∏≤‡∏∞‡∏Å‡∏≤‡∏£‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤‡∏¢‡∏±‡∏á‡∏Ñ‡∏á‡∏≠‡∏¢‡∏π‡πà‡πÉ‡∏ô‡∏´‡∏ô‡πà‡∏ß‡∏¢‡∏Ñ‡∏ß‡∏≤‡∏°‡∏à‡∏≥
    -- ‡πÅ‡∏ï‡πà‡∏à‡∏∞‡πÅ‡∏™‡∏î‡∏á‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞‡∏õ‡∏±‡∏à‡∏à‡∏∏‡∏ö‡∏±‡∏ô
    if AutoBuyWaterEnabled then
